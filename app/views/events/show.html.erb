<h1><%= @event.name %></h1>

<ul>
	<li>Posted by: <%= link_to "#{@event.creater.name}", @event.creater %></li>
	<li><%= @event.place %></li>
	<li><%= @event.date.strftime("%B %d, %Y") %></li>
	<li><%= @event.description %></li>
</ul>

<h3>Attendees:</h3>
<ul>
	<% @event.attendees.each do |attendee| %>
		<li><%= link_to "#{attendee.name}", attendee %></li>
	<% end %>
</ul>