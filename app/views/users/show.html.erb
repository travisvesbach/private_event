<h1><%= @user.name %></h1>

<h3>Created events: </h3>
<ul class="created_events">
	<% @user.created_events.each do |event| %>
		<li><%= link_to "#{event.name}", event %>
			<ul>
				<li><%= event.place %></li>
				<li><%= event.date.strftime("%B %d, %Y") %></li>
			</ul>
		</li>
	<% end %>
</ul>

<h3>Upcoming events:</h3>
<ul class="attended_events">
	<% @upcoming_events.each do |event| %>
